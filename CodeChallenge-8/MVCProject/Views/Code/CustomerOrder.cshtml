@model MVCProject.Models.Customer

<h2>Customer Details for Order ID 10248</h2>

@if (Model != null)
{
    <table border="1">
        <tr>
            <td>Customer ID</td>
            <td>@Model.CustomerID</td>
        </tr>
        <tr>
            <td>Company Name</td>
            <td>@Model.CompanyName</td>
        </tr>
        <tr>
            <td>Contact Name</td>
            <td>@Model.ContactName</td>
        </tr>
        <tr>
            <td>Country</td>
            <td>@Model.Country</td>
        </tr>
    </table>
}
else
{
    <p>No customer found for Order ID 10248</p>
}
